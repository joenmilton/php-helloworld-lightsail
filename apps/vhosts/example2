<VirtualHost *:80>
    ServerName example.local
    DocumentRoot /opt/bitnami/apache/apps/example
    
    <Directory "/opt/bitnami/apache/apps/example">
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog logs/example_error.log
    CustomLog logs/example_access.log combined
</VirtualHost>